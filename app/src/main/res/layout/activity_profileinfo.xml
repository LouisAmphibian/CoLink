<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B3D4F"
    android:padding="24dp"
    tools:context=".ProfileInfoActivity">

    <!-- Header Text -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile info"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textStyle="bold" />

    <!-- Sub Text -->
    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please provide your name and optional photo"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_below="@id/headerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/subText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/sample_profile"
    android:background="@drawable/circle_background"
    android:scaleType="centerCrop" />

    <!-- Name EditText -->
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="40dp"
        android:hint="Enter your name"
        android:textColor="@android:color/white"
        android:textColorHint="#CCCCCC"
        android:background="@android:color/transparent"
        android:maxLength="20"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <!-- Character Count or Icon -->
    <ImageView
        android:id="@+id/nameIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/nameEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_person" />

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#2EB8A7"
        android:textColor="@android:color/white" />

</RelativeLayout>