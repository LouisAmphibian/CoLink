<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="24dp"
  android:background="@color/colink_bg"
  tools:context=".VerifiedConfirmationActivity">

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_horizontal">

            <TextView
              android:id="@+id/titleText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Verifying your number"
              android:textColor="#6DDAD3"
              android:textSize="20sp"
              android:fontFamily="sans-serif-medium"
              android:layout_marginTop="60dp" />

            <TextView
              android:id="@+id/infoText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Enter the 6-digit code sent to your phone number"
              android:textColor="#B0C4C4"
              android:textSize="14sp"
              android:gravity="center"
              android:layout_marginTop="12dp" />

            <!-- OTP input (6 boxes) -->
            <LinearLayout
              android:id="@+id/otpContainer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center"
              android:layout_marginTop="36dp">

                <EditText
                  android:id="@+id/otp1"
                  android:layout_width="44dp"
                  android:layout_height="50dp"
                  android:background="@android:drawable/edit_text"
                  android:gravity="center"
                  android:inputType="number"
                  android:maxLength="1"
                  android:textColor="#000000"
                  android:layout_margin="4dp" />

                <EditText
                  android:id="@+id/otp2"
                  android:layout_width="44dp"
                  android:layout_height="50dp"
                  android:background="@android:drawable/edit_text"
                  android:gravity="center"
                  android:inputType="number"
                  android:maxLength="1"
                  android:textColor="#000000"
                  android:layout_margin="4dp" />

                <EditText
                  android:id="@+id/otp3"
                  android:layout_width="44dp"
                  android:layout_height="50dp"
                  android:background="@android:drawable/edit_text"
                  android:gravity="center"
                  android:inputType="number"
                  android:maxLength="1"
                  android:textColor="#000000"
                  android:layout_margin="4dp" />

                <EditText
                  android:id="@+id/otp4"
                  android:layout_width="44dp"
                  android:layout_height="50dp"
                  android:background="@android:drawable/edit_text"
                  android:gravity="center"
                  android:inputType="number"
                  android:maxLength="1"
                  android:textColor="#000000"
                  android:layout_margin="4dp" />

                <EditText
                  android:id="@+id/otp5"
                  android:layout_width="44dp"
                  android:layout_height="50dp"
                  android:background="@android:drawable/edit_text"
                  android:gravity="center"
                  android:inputType="number"
                  android:maxLength="1"
                  android:textColor="#000000"
                  android:layout_margin="4dp" />

                <EditText
                  android:id="@+id/otp6"
                  android:layout_width="44dp"
                  android:layout_height="50dp"
                  android:background="@android:drawable/edit_text"
                  android:gravity="center"
                  android:inputType="number"
                  android:maxLength="1"
                  android:textColor="#000000"
                  android:layout_margin="4dp" />
            </LinearLayout>

            <TextView
              android:id="@+id/timerText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="You may request a new code in 0:20"
              android:textColor="#B0C4C4"
              android:textSize="14sp"
              android:layout_marginTop="32dp"
              android:gravity="center" />

            <!-- Resend code option -->
            <TextView
              android:id="@+id/resendText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Didn't receive code? Resend"
              android:textColor="#6DDAD3"
              android:textSize="14sp"
              android:layout_marginTop="16dp"
              android:clickable="true"
              android:focusable="true" />

        </LinearLayout>
    </ScrollView>

    <!-- Verify button at the bottom, same as verification.xml -->
    <Button
      android:id="@+id/verifyButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Verify"
      android:backgroundTint="#1DB6A5"
      android:textColor="#FFFFFF"
      android:textSize="16sp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="16dp"
      android:fontFamily="sans-serif-medium" />

</LinearLayout>