<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for chat messages - supports sent and received messages -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- Received Message (Left side) -->
    <LinearLayout
        android:id="@+id/receivedMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:maxWidth="280dp"
        android:visibility="gone">

        <!-- Sender Profile Picture -->
        <TextView
            android:id="@+id/senderInitial"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/accent_blue"
            android:text="J"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/senderNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="2dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/receivedMessageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hey everyone! Looking forward to the party!"
                        android:textSize="15sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/receivedTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30 AM"
                        android:textSize="11sp"
                        android:textColor="@color/gray_light"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="end" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

    <!-- Sent Message (Right side) -->
    <LinearLayout
        android:id="@+id/sentMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:maxWidth="280dp"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/primary_blue">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/sentMessageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me too! I'll bring the drinks."
                    android:textSize="15sp"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="end"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/sentTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:32 AM"
                        android:textSize="11sp"
                        android:textColor="#E0E0E0"
                        android:layout_marginEnd="4dp" />

                    <ImageView
                        android:id="@+id/messageStatusIcon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_done_all"
                        app:tint="#4CAF50" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- System Message (Center) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/systemMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFF9C4"
        android:visibility="gone">

        <TextView
            android:id="@+id/systemMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John contributed R 500 to the fund"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center" />
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>